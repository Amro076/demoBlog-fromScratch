{% extends 'base.html.twig' %}

{% block title %}COUCOU!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<section class="row article">
  
        

  {% for page in pages %}
    
       
  
    <article class="col-md-4 mx-auto text-center border border-dark mb-3 p-3 mt-3 mr-1">
        <h2>{{page.titre}}</h2>
        <div class="content">
            <img src="http://picsum.photos/250/150" alt="">
         {{ page.contenu|raw}}
            <a href="{{ path('sous_article', {id: page.id})}}" class="btn btn-primary">Lire la suite</a>
        </div>
         
    
    
    </article>
     {% endfor %} 

</section>
{% endblock %}
